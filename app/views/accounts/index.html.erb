<h1>Accounts</h1>

<div class="btn-toolbar">
  <%= link_to 'New Account', new_account_path, :class => 'btn' %>
</div>

<table class="table table-bordered">
  <tr>
    <th>Name</th>
    <th>Access key</th>
    <th>Secret access key</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%= account.name %></td>
    <td><%= account.access_key_id %></td>
    <td><%= account.secret_access_key %></td>
    <td><%= link_to 'Show', account %></td>
    <td><%= link_to 'Edit', edit_account_path(account) %></td>
    <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
